@using Bloghost.Logic.Components
<footer id="footer" class="clearfix">
    <div class="container">
        <div class="row-fluid">
            <div class="span4">
                <section>
                    <h4>Tags</h4>
                    <div class="tag-wrapper-footer">
                        @foreach (var tag in ServiceFactory.GetTagService().GetTop5Tags())
                        {
                            <a href="#" class="tag">@tag.Content</a>
                        }
                    </div>
                </section>
            </div>

            <div class="span4">
                <section>
                    <h4>Top 5 bloggers</h4>
                    <ul class="image-widget clearfix">
                        @foreach (var user in ServiceFactory.GetUserService().GetTop5Users())
                        {
                            <li><a href="/users/@user.AccessName">
                                <img src="@Url.Content("~/Images/" + user.PathToAvatar)" alt="" /></a></li>
                        }
                    </ul>
                </section>

                <section>
                    <h4>Quick search</h4>
                    <p>Type something to search on the site. Do not be afraid, take action!</p>
                    <form action="#" method="post">
                        <div class="input-append row-fluid">
                            <input type="text" placeholder="Your words" class="span6" name="email" />
                            <button class="btn btn-primary">Search</button>
                        </div>
                    </form>
                </section>
            </div>

            <div class="span4">
                <section>
                    <h4>Latest Blog Posts</h4>
                    <ul class="footerPosts">
                        @foreach (var post in ServiceFactory.GetPostService().GetLatestPosts())
                        {
                            <li><a href="/blogs/@post.Blog.AccessName/@post.AccessName">@post.Title</a> <span class="meta">@post.CreatedDate.ToLongDateString()</span> </li>
                        }
                    </ul>
                </section>
            </div>
        </div>
    </div>

    <section class="footerCredits">
        <div class="container">
            <ul class="clearfix">
                <li>© 2013 Blogger. All rights reserved.</li>
                <li><a href="#">Site Map</a></li>
                <li><a href="#">Privacy</a></li>
            </ul>
        </div>
    </section>
</footer>
